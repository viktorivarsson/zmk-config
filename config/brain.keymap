    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
   //                  ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮   ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮
                        &kp Q            &kp W            &kp F            &kp P            &kp B                &kp J            &kp L            &kp U            &kp Y            &kp TAB
   // ╭────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╮
       &kp TAB          &kp A            &kp R            &kp S            &kp T            &kp G                &kp M            &kp N            &kp E            &kp I            &kp O            &kp ENTER
   // ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤
       &kp LALT         &kp Z            &kp X            &kp C            &kp D            &kp V                &kp K            &kp H            &kp COMMA        &kp DOT          &kp BSPC         &kp BSPC
   // ╰────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╯
                                                          &mo NUMBER       &kp LCTRL        &kp LSHIFT           &kp SPACE        &mo SYM_M        &kp LGUI
   //                                                    ╰────────────────┴────────────────┴────────────────╯   ╰────────────────┴────────────────┴────────────────╯
            >;
        };

        non_mac_layer {
            bindings = <
                        &kp Q       &kp W         &kp F           &kp P       &kp B         &kp J                 &kp L                   &kp U           &kp Y       &kp SED_AE
            &kp LSHIFT  &kp A       &kp R         &kp S           &kp T       &kp G         &kp M                 &kp N                   &kp E           &kp I       &kp O       &kp RSHIFT
            &kp LGUI    &kp Z       &kp X         &kp C           &kp D       &kp V         &kp K                 &kp H                   &kp COMMA       &kp DOT     &kp SED_OO  &kp SED_AA
                                                  &lt NUMBER TAB  &kp SPACE   &kp ENTER     &kp BSPC              &lt SYMBOLS_SWE BSPC    &lt FUNC ESC
            >;
        };

        gaming_layer {
            bindings = <
                        &kp N1          &kp N2          &kp N3          &kp N4            &kp N5            &kp N6            &kp N7                &kp N8        &kp N9      &kp N0
            &kp ESC     &kp LSHIFT      &kp Q           &kp W           &kp E             &kp R             &kp M             &kp N                 &kp E         &kp I       &kp O         &kp SEM_AA
            &kp LALT    &kp LCTRL       &kp A           &kp S           &kp D             &kp F             &kp K             &kp H                 &kp COMMA     &kp DOT     &kp SEM_OO    &kp ENTER
                                                        &mo GAMING_SEC  &kp SPACE         &kp G             &kp BSPC          &lt SYMBOLS_SWE BSPC  &lt FUNC ESC
            >;
        };

        gaming_secondary_layer {
            bindings = <
                        &kp F1          &kp F2          &kp F3      &kp F4            &kp F5            &trans            &trans            &trans        &trans      &trans
            &kp TAB     &kp H           &kp T           &kp Y       &kp U             &kp I             &trans            &trans            &trans        &trans      &trans        &trans
            &kp J       &kp K           &kp Z           &kp X       &kp C             &kp V             &trans            &trans            &trans        &trans      &trans        &trans
                                                        &trans      &kp ENTER         &trans            &trans            &trans            &trans
            >;
        };

        sym_m_layer {
            bindings = <
   //                  ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮   ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮
                        &kp SEM_DQT      &kp SEM_AT       &kp SEM_EXCL     &kp SEM_LBKT     &kp SEM_RBKT         &kp SEM_LPAR     &kp SEM_RPAR     &kp SEM_UNDER    &kp SEM_QMARK    &kp SEM_AE
   // ╭────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╮
       &trans           &kp SEM_SQT      &kp SEM_AMPS     &kp SEM_STAR     &kp SEM_GRAVE    &kp SEM_PLUS         &kp SEM_MINUS    &kp SEM_TILDE    &kp SEM_EQUAL    &kp SEM_PIPE     &kp SEM_AA       &trans
   // ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤
       &trans           &kp SEM_PRCNT    &kp SEM_HASH     &kp SEM_CARET    &kp SEM_DLLR     &kp SEM_BSLH         &kp SEM_LBRC     &kp SEM_RBRC     &kp SEM_LT       &kp SEM_GT       &kp SEM_OO       &trans
   // ╰────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╯
                                                          &kp SEM_FSLH     &kp SPACE        &trans               &trans           &trans           &trans
   //                                                    ╰────────────────┴────────────────┴────────────────╯   ╰────────────────┴────────────────┴────────────────╯
            >;
        };

        symbols_swe_layer {
            bindings = <
                      &kp SED_DQT       &kp SED_AT          &kp SED_EXCL          &kp SED_LBKT          &kp SED_RBKT      &kp SED_LPAR    &kp SED_RPAR          &kp SED_UNDER         &kp SED_QMARK      &kp SED_AE
            &none     &kp SED_SQT       &kp SED_AMPS        &kp SED_STAR          &kp SED_GRAVE         &kp SED_PLUS      &kp SED_MINUS   &kp SED_TILDE         &kp SED_EQUAL         &kp SED_PIPE       &kp SED_AA         &none
            &none     &kp SED_PRCNT     &kp SED_HASH        &kp SED_CARET         &kp SED_DLLR          &kp SED_BSLH      &kp SED_LBRC    &kp SED_RBRC          &kp SED_LT            &kp SED_GT         &kp SED_OO         &none
                                                            &kp SED_FSLH          &kp SPACE             &trans            &trans          &trans                &trans
            >;
        };


        func_layer {
            bindings = <
   //                  ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮   ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮
                        &trans           &kp F1           &kp F2           &kp F3           &kp F4               &kp HOME         &kp PG_UP        &kp UP           &kp PG_DN        &kp DEL
   // ╭────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╮
       &trans           &trans           &kp F5           &kp F6           &kp F7           &kp F8               &kp END          &kp LEFT         &kp DOWN         &kp RIGHT        &kp C_VOL_UP     &trans
   // ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤
       &trans           &kp CAPS         &kp F9           &kp F10          &kp F11          &kp F12              &kp C_PREV       &kp C_PP         &kp C_NEXT       &kp C_MUTE       &kp C_VOL_DN     &trans
   // ╰────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╯
                                                          &trans           &kp SPACE        &trans               &trans           &trans           &trans
   //                                                    ╰────────────────┴────────────────┴────────────────╯   ╰────────────────┴────────────────┴────────────────╯
            >;
        };

        number_layer {
            bindings = <
   //                  ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮   ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮
                        &trans           &trans           &trans           &trans           &trans               &trans           &kp N7           &kp N8           &kp N9           &trans
   // ╭────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╮
       &trans           &trans           &trans           &trans           &trans           &trans               &kp SEM_MINUS    &kp N4           &kp N5           &kp N6           &kp COMMA        &kp SEM_FSLH
   // ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤
       &trans           &trans           &trans           &trans           &trans           &trans               &kp SEM_PLUS     &kp N1           &kp N2           &kp N3           &kp DOT          &kp SEM_STAR
   // ╰────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╯
                                                          &trans           &trans           &trans               &trans           &kp BSPC         &kp N0
   //                                                    ╰────────────────┴────────────────┴────────────────╯   ╰────────────────┴────────────────┴────────────────╯
            >;
        };

        settings_layer {
            bindings = <
   //                  ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮   ╭────────────────┬────────────────┬────────────────┬────────────────┬────────────────╮
                        &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2     &bt BT_SEL 3     &bt BT_SEL 4         &ext_power EP_ON &ext_power EP_OFF   &trans          &trans           &trans
   // ╭────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╮
       &trans           &bt BT_CLR       &trans           &trans           &trans           &trans               &to DEFAULT      &to GAME         &to NON_MAC      &trans           &trans           &trans
   // ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤
       &trans           &out OUT_BLE     &out OUT_USB     &trans           &trans           &bootloader          &bootloader      &trans           &trans           &trans           &trans           &trans
   // ╰────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────┤   ├────────────────┼────────────────┼────────────────┼────────────────┼────────────────┼────────────────╯
                                                          &trans           &trans           &trans               &trans           &trans           &trans
   //                                                    ╰────────────────┴────────────────┴────────────────╯   ╰────────────────┴────────────────┴────────────────╯
            >;
        };
    };
};

