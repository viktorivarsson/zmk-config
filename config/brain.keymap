#define DEFAULT       0
#define NON_MAC       1
#define GAMING        2
#define GAMING_SEC    3
#define SYMBOLS_SWE_M 4
#define SYMBOLS_SWE   5
#define FUNC          6
#define NUMBER        7
#define SETTINGS      8

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };
    cond_layers {
        compatible = "zmk,conditional-layers";
        // Define SETTINGS layer as tri-state
        func_tristate_mac {
            if-layers = <SYMBOLS_SWE_M FUNC>;
            then-layer = <SETTINGS>;
        };
        func_tristate {
            if-layers = <SYMBOLS_SWE FUNC>;
            then-layer = <SETTINGS>;
        };
    };

