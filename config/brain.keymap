        settings_layer {
            bindings = <
                    &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4    &ext_power EP_ON    &ext_power EP_OFF   &trans      &trans    &trans
