        default_layer {
            bindings = <
                        &kp Q       &kp W         &kp F           &kp P           &kp B           &kp J                 &kp L                     &kp U           &kp Y       &kp TAB
            &kp LSHIFT  &kp A       &kp R         &kp S           &kp T           &kp G           &kp M                 &kp N                     &kp E           &kp I       &kp O       &kp RSHIFT
            &kp LCTRL   &kp Z       &kp X         &kp C           &kp D           &kp V           &kp K                 &kp H                     &kp COMMA       &kp DOT     &kp ENTER   &kp BSPC
                                                  &lt NUMBER TAB  &mt LALT SPACE  &mt LGUI ENTER  &kp BSPC              &lt SYMBOLS_SWE_M SPACE   &lt FUNC ESC
            >;
        };

        non_mac_layer {
            bindings = <
                        &kp Q       &kp W         &kp F           &kp P       &kp B         &kp J                 &kp L                   &kp U           &kp Y       &kp SED_AE
            &kp LSHIFT  &kp A       &kp R         &kp S           &kp T       &kp G         &kp M                 &kp N                   &kp E           &kp I       &kp O       &kp RSHIFT
            &kp LGUI    &kp Z       &kp X         &kp C           &kp D       &kp V         &kp K                 &kp H                   &kp COMMA       &kp DOT     &kp SED_OO  &kp SED_AA
                                                  &lt NUMBER TAB  &kp SPACE   &kp ENTER     &kp BSPC              &lt SYMBOLS_SWE BSPC    &lt FUNC ESC
            >;
        };

        gaming_layer {
            bindings = <
                        &kp N1          &kp N2          &kp N3          &kp N4            &kp N5            &kp N6            &kp N7                &kp N8        &kp N9      &kp N0
            &kp ESC     &kp LSHIFT      &kp Q           &kp W           &kp E             &kp R             &kp M             &kp N                 &kp E         &kp I       &kp O         &kp SEM_AA
            &kp LALT    &kp LCTRL       &kp A           &kp S           &kp D             &kp F             &kp K             &kp H                 &kp COMMA     &kp DOT     &kp SEM_OO    &kp ENTER
                                                        &mo GAMING_SEC  &kp SPACE         &kp G             &kp BSPC          &lt SYMBOLS_SWE BSPC  &lt FUNC ESC
            >;
        };

        gaming_secondary_layer {
            bindings = <
                        &kp F1          &kp F2          &kp F3      &kp F4            &kp F5            &trans            &trans            &trans        &trans      &trans
            &kp TAB     &kp H           &kp T           &kp Y       &kp U             &kp I             &trans            &trans            &trans        &trans      &trans        &trans
            &kp J       &kp K           &kp Z           &kp X       &kp C             &kp V             &trans            &trans            &trans        &trans      &trans        &trans
                                                        &trans      &kp ENTER         &trans            &trans            &trans            &trans
            >;
        };


