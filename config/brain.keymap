#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/ext_power.h>
#include "swe_keys_default.h"
#include "swe_keys_mac.h"

#define DEFAULT       0
#define NON_MAC       1
#define GAMING        2
#define GAMING_SEC    3
#define SYM_M         4
#define SYMBOLS_SWE   5
#define FUNC          6
#define NUMBER        7
#define SETTINGS      8

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        sll: sticky_layer {
            compatible = "zmk,behavior-sticky-layer";
            label = "STICKY_LAYER";
            #binding-cells = <1>;
            release-after-ms = <5000>;
        };
    };
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer_mac {
            if-layers = <SYM_M NUMBER>;
            then-layer = <FUNC>;
        };
        tri_layer {
            if-layers = <SYMBOLS_SWE NUMBER>;
            then-layer = <FUNC>;
        };
    };

